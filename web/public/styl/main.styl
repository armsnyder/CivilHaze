$bgColor = black

body
  background $bgColor
  color white
  padding 0
  margin 0

#gamePartial
  .fullscreen
    position absolute
    width 100%
    height 100%
    background-color black

/* Disable selection highlight on drag. */
canvas
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  background-color black
  position absolute
  top 50%
  left 0
  margin -40vh 0 0 0
  width 80vh
  height 80vh

h1
  text-align center
  margin-top 25%
  font-size: 36pt

#rightSide
  float right
  button
    font-size 200%
    height 20vh
    padding 5vh
    width 30vw