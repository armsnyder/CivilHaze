$bgColor = black

body
  background $bgColor
  color white
  padding 0
  margin 0

#gamePartial
  .fullscreen
    position absolute
    width 100%
    height 100%
    background-color black

/* Disable selection highlight on drag. */
canvas
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  position absolute
  top 50%
  left 0
  margin -40vh 0 0 0
  width 80vh
  height 80vh

h1
  text-align center
  margin-top 25%
  font-size: 36pt

#rightSide
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  position absolute
  top 40%
  margin -10vh 0 0 70vw
  height 20vh
  width 20vw

#innerButton
  width 100%
  height 0
  padding-bottom 100%
  border-radius 50%
  border 10px solid #555
  overflow hidden
  background #777
  box-shadow 0 0 3px #444